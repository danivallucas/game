<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/cell_width"
    android:layout_height="@dimen/cell_height"
    >

    <ImageView
        android:id="@+id/icon_emoji"
        android:layout_width="@dimen/player_icon_width"
        android:layout_height="@dimen/player_icon_height"
        android:layout_marginTop="@dimen/badge_margin"
        android:layout_alignParentLeft="true"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/children_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="3"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:background="@drawable/children_count"/>

    <RelativeLayout
        android:id="@+id/icon_label_container"
        android:layout_width="@dimen/player_icon_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/icon_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:minWidth="1dp"
            android:ellipsize="end"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:shadowColor="#7F000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>
    </RelativeLayout>
</RelativeLayout>