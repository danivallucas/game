<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="#33000000">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".MainActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        app:mapType="normal"
        app:cameraTilt="60"
        app:uiTiltGestures="false"
        app:uiCompass="false"
        />

    <TextView
        android:id="@+id/ranking"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:padding="3dp"
        android:textColor="#FFFFFF"
        android:shadowColor="#FF000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:background="#66000000"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/msg"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:textSize="15dp"
        android:textColor="#FF000000"
        android:elevation="5dp"
        android:background="#FFFFFFFF"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/alert"
        android:text="Testando alert..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textSize="18dp"
        android:textColor="#FF000000"
        android:elevation="5dp"
        android:background="#FFFFFFFF"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btnGo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="onBtnGoClick"
        android:background="@drawable/oval"
        android:text="Go"
        android:textSize="24dp"
        android:textColor="#FFFFFF"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btnTurbo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="onBtnTurboClick"
        android:background="@drawable/oval"
        android:text="Turbo"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="25dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btnBomb"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="onBtnBombClick"
        android:background="@drawable/oval"
        android:text="Bomb"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="175dp"
        android:layout_marginRight="25dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btnOk"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="onBtnOkClick"
        android:background="@drawable/oval"
        android:text="Ok"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="25dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="onBtnCancelClick"
        android:background="@drawable/oval"
        android:text="Cancel"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btnStop"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="onBtnStopClick"
        android:background="@drawable/oval"
        android:text="Stop"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:visibility="invisible"/>




</RelativeLayout>