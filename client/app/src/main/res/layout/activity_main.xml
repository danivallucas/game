<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="#33000000">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".MainActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        app:mapType="normal"
        app:cameraTilt="60"
        app:uiTiltGestures="false"
        app:uiCompass="false"
        />

    <TextView
        android:id="@+id/status"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="#000000"
        android:shadowColor="#7FFFFFFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"/>

    <Button
        android:id="@+id/btnStartRoute"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="startRoute"
        android:background="@drawable/oval"
        android:text="+"
        android:textSize="24dp"
        android:textColor="#FFFFFF"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btnDirect"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="finishDirectRoute"
        android:background="@drawable/oval"
        android:text="Direct"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="175dp"
        android:layout_marginRight="25dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btnNormal"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="finishNormalRoute"
        android:background="@drawable/oval"
        android:text="Normal"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="25dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="cancelRoute"
        android:background="@drawable/oval"
        android:text="Cancel"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btnStopPlayer"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="stopPlayer"
        android:background="@drawable/oval"
        android:text="Stop"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:visibility="invisible"/>


</RelativeLayout>